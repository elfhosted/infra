apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: opencost
  namespace: flux-system
spec:
  interval: 15m
  path: opencost
  prune: true # remove any elements later removed from the above path
  sourceRef:
    kind: GitRepository
    name: infra
  healthChecks:
    - apiVersion: apps/v1
      kind: Deployment
      name: opencost
      namespace: opencost
    # Always use the helmrelease to determine health too
    - apiVersion: helm.toolkit.fluxcd.io/v2beta1
      kind: HelmRelease
      name: opencost
      namespace: opencost       
  postBuild:
    substituteFrom:
      - kind: ConfigMap
        name: cluster-vars