apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ provider.name }}.{{ dns_domain }}
  namespace: authentik
spec:
  ingressClassName: nginx
  rules:
  - host: {{ provider.name }}.{{ dns_domain }}
    http:
      paths:
      - backend:
          service:
            name: authentik
            port:
              name: http
        path: /
        pathType: Prefix