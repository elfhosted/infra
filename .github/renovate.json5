{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["ci","main"],
  "repositories": ["geek-cookbook/elf-infra"],
  "assignees": ["funkypenguin"],  
  "flux": {
    "fileMatch": ["helmrelease-.+\\.yaml$", "helmrepository-.+\\.yaml$", "bootstrap/flux-system/gotk-components.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["helmrelease-.+\\.yaml$","cronjob-.+\\.yaml$"]
  },  
  "branchTopic": "{{{replace 'helmrelease-' '' packageFile}}}",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    { // most updates go through ci and manual merging first
      "automerge": false,
      "ignoreTests": true,
      "baseBranches": ["ci"],
      "packagePatterns": [ ".*" ],
      "excludePackagePatterns": ["annatar","notknightcrawler-producer","notknightcrawler-consumer","stremio-jackett-cacher","xtremio","mediafusion", "stremio-jackett","jackettio", "shluflix" ]
    },
    { // auto-merge upstream app-level images
      "matchPackagePatterns": ["digest","patch"],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true,
      "ignoreTests": true,
      "baseBranches": ["main"],
      "packagePatterns": ["annatar","notknightcrawler-producer","notknightcrawler-consumer","stremio-jackett-cacher","xtremio","mediafusion", "stremio-jackett","jackettio","shluflix" ]
    } 
  ]
}
