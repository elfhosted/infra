{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["ci","main"],
  "repositories": ["elfhosted/infra"],
  "assignees": ["funkypenguin"],  
  "flux": {
    "fileMatch": ["helmrelease-.+\\.yaml$", "helmrepository-.+\\.yaml$", "bootstrap/flux-system/gotk-components.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["helmrelease-.+\\.yaml$","cronjob-.+\\.yaml$"]
  },  
  "branchTopic": "{{{replace 'helmrelease-' '' packageFile}}}",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    { // most updates go through ci and manual merging first
      "automerge": false,
      "ignoreTests": true,
      "baseBranches": ["ci"],
      "packagePatterns": [ ".*" ],
    "excludePackagePatterns": [ "prowlarr-nightly", "stremio-easynews-addon", "comet", "formulio", "aiostreams", "aiolists", "zilean", "jackett", "jackettio", "mediafusion", "stremio-jackett", "shluflix", "stremify", "notcyberflix-server", "cyberflix-server-dev", "discussio", "stremio-jackett", "stremthru","tmdb-addon", "clickhouse-server" ]
    },
    { // auto-merge upstream app-level images
      "matchPackagePatterns": ["digest","patch"],
      "automerge": true,
      "automergeType": "branch",
      "platformAutomerge": true,
      "ignoreTests": true,
      "baseBranches": ["main"],
      "packagePatterns": [ "flaresolverr", "stremio-easynews-addon", "comet", "formulio", "aiostreams", "aiolists", "zilean", "prowlarr-nightly", "jackettio", "jackett", "mediafusion", "stremio-jackett","shluflix", "stremify", "notcyberflix-server", "cyberflix-server-dev", "stremio-rating-addon", "discussio","stremio-jackett", "stremthru","tmdb-addon","clickhouse-server" ]
    } 
  ]
}
